<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="java.text.SimpleDateFormat"/>
        <variable
            name="favouriteDetailsView"
            type="com.iti.mad41.taqs.favouriteDetails.FavouriteDetailsViewModel" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fadedWhite">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/home_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/fadedWhite"
            tools:context=".home.HomeFragment">

            <TextView
                android:id="@+id/city_txt_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:textSize="20sp"
                android:visibility="visible"
                android:text="@{favouriteDetailsView.weatherNode.address}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/date_time_txt_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:getDayWithDate="@{favouriteDetailsView.weatherNode.current.dt}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/city_txt_view" />

            <androidx.cardview.widget.CardView
                android:id="@+id/current_weather_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:visibility="visible"
                app:cardCornerRadius="30sp"
                app:cardElevation="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/date_time_txt_view">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background"
                    android:paddingTop="15sp"
                    android:paddingBottom="40sp">

                    <TextView
                        android:id="@+id/temp_txt_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{favouriteDetailsView.weatherNode.current.temp.toString()}"
                        android:textColor="#FFFFFF"
                        android:textSize="80sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/weather_main_txt_view" />

                    <TextView
                        android:id="@+id/weather_main_txt_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{favouriteDetailsView.weatherNode.current.weather[0].description}"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/unit_txt_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="@{favouriteDetailsView.getTemperatureUnit()}"
                        android:textColor="#FFFFFF"
                        android:textSize="40sp"
                        app:layout_constraintStart_toEndOf="@+id/temp_txt_view"
                        app:layout_constraintTop_toTopOf="@+id/temp_txt_view" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/current_weather_icon"
                android:layout_width="150sp"
                android:layout_height="150sp"
                android:layout_marginStart="135dp"
                android:layout_marginTop="100dp"
                android:layout_marginEnd="136dp"
                android:loadImage="@{favouriteDetailsView.weatherNode.current.weather[0].icon}"
                android:visibility="visible"
                android:elevation="31dp"
                app:layout_constraintEnd_toEndOf="@+id/current_weather_card_view"
                app:layout_constraintStart_toStartOf="@+id/current_weather_card_view"
                app:layout_constraintTop_toTopOf="@+id/current_weather_card_view" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/hourly_weather_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"
                android:visibility="visible"
                app:hourlyItems="@{favouriteDetailsView.weatherNode.hourly}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@+id/current_weather_extra_card_view" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/daily_weather_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"
                android:visibility="visible"
                app:dailyItems="@{favouriteDetailsView.weatherNode.daily}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@+id/hourly_weather_list" />

            <androidx.cardview.widget.CardView
                android:id="@+id/current_weather_extra_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:visibility="visible"
                app:cardCornerRadius="25dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toBottomOf="@+id/current_weather_icon"
                tools:layout_editor_absoluteX="199dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/humidity_icon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:src="@drawable/humidity_icon" />

                        <TextView
                            android:id="@+id/humidity_txt_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@{favouriteDetailsView.weatherNode.current.humidity.toString()}" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/wind_icon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:src="@drawable/wind_icon" />

                        <TextView
                            android:id="@+id/wind_txt_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@{favouriteDetailsView.weatherNode.current.windSpeed.toString()}" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/pressure_icon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:src="@drawable/pressure_icon" />

                        <TextView
                            android:id="@+id/pressure_txt_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@{favouriteDetailsView.weatherNode.current.pressure.toString()}" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>